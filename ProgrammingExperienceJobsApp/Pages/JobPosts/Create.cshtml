@page
@model ProgrammingExperienceJobsApp.Pages.JobPosts.CreateModel

<form method="post">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Job Post</h4>
            <div class="mb-3">
                <label asp-for="JobPost.Title"></label>
                <input asp-for="JobPost.Title" class="form-control" />
                <span asp-validation-for="JobPost.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="JobPost.Description"></label>
                <input asp-for="JobPost.Description" class="form-control" />
                <span asp-validation-for="JobPost.Description" class="text-danger"></span>
            </div>
            <p>Contact Information</p>
            <div class="mb-3">
                <label>Company Name</label>
                <input asp-for="JobPost.CompanyName" class="form-control" />
                <span asp-validation-for="JobPost.CompanyName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="JobPost.Email"></label>
                <input asp-for="JobPost.Email" class="form-control" />
                <span asp-validation-for="JobPost.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Phone Number</label>
                <input asp-for="JobPost.PhoneNumber" class="form-control" />
                <span asp-validation-for="JobPost.PhoneNumber" class="text-danger"></span>
            </div>
            <h3>Experience</h3>
            <div class="mb-3">
                <label asp-for="Experience.Language"></label>
                <select asp-for="Experience.Language" class="form-select">
                    @foreach (var language in @Model.languageValues)
                    {
                        <option value=@language>@language.ToString().Replace("Sharp", "#").Replace("Plus", "+")</option>
                    }
                </select>
                <span asp-validation-for="Experience.Language" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Experience.Years"></label>
                <input asp-for="Experience.Years" class="form-control" />
                <span asp-validation-for="Experience.Years" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}