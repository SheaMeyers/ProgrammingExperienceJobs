@page
@model ProgrammingExperienceJobsApp.Pages.JobPosts.ViewModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">View Job Post</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="JobPost.Title"></label>
            <input asp-for="JobPost.Title" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="JobPost.Description"></label>
            <input asp-for="JobPost.Description" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
    </div>
</form>

